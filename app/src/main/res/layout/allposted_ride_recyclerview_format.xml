<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:background="@drawable/post_ride_recyclerview_background_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ownerId"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/pickup_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/averia_libre"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:text="Pickup"
                android:textColor="#737272"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:scaleX="3"
                android:scaleY="2"
                android:src="@drawable/pickup_to_destination"/>

            <TextView
                android:id="@+id/destination_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Destination"
                android:fontFamily="@font/averia_libre"
                android:textColor="#737272"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Date"
                android:fontFamily="@font/averia_libre"
                android:textColor="#737272"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Time"
                android:fontFamily="@font/averia_libre"
                android:textColor="#737272"
                android:gravity="center|left"
                android:layout_marginStart="80dp"
                android:textSize="15sp"
                android:paddingStart="8dp"
                android:textStyle="bold"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seats"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Seats"
                android:fontFamily="@font/averia_libre"
                android:textColor="#737272"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Amount"
                android:fontFamily="@font/averia_libre"
                android:textColor="#737272"
                android:gravity="center|left"
                android:layout_marginStart="80dp"
                android:paddingStart="8dp"
                android:textSize="15sp"
                android:textStyle="bold"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>